@model WebBuilding_50080.Models.Order

<h2>Order Status</h2>
<p>Order ID: @Model.OrderId</p>
<p>Total Price: @Model.TotalPrice</p>

<h3>Products:</h3>
<ul>
    @foreach (var product in Model.Products)
    {
        <li>@product.Name - Price: @product.Price</li>
    }
</ul>

@if (Model.IsReady)
{
    <div class="alert alert-success d-flex align-items-center" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill" /></svg>
        <div>
            Your order is ready for pickup!!
        </div>
    </div>
}
else
{
    <p style="color:coral; font-size:1.2rem;">
        Your order is being prepared :)
        <img src="~/images/cooking.gif" alt="Order Being Prepared" style="width: 50px; height: 50px;" />
    </p>

}


@model WebBuilding_50080.Models.Order

<div class="container mt-5">
    <h2 class="text-center mb-4">Order Status</h2>

    @if (Model.IsReady)
    {
        <div class="text-center mb-4">
            <img src="~/images/verified.gif" alt="Order Ready" class="img-fluid" style="width: 100px; height: 100px;" />
        </div>
        <div class="alert alert-success text-center" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            Your order is ready for pickup!!
        </div>
    }
    else
    {
        <div class="text-center mb-4">
            <img src="~/images/cooking.gif" alt="Order Ready" class="img-fluid" style="width: 100px; height: 100px;" />
        </div>
        <div class="alert alert-warning text-center" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            Your order is being prepared :)
        </div>
    }

    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Invoice Details</h4>
                    <p><strong>Customer Name:</strong> --- </p>
                    <p><strong>Invoice #:</strong> @Model.OrderId</p>
                    <p><strong>Date:</strong> @DateTime.Now.ToString("MM/dd/yyyy")</p>
                    <p><strong>Total Price:</strong> $@Model.TotalPrice</p>

                    <h5 class="mt-4">Products</h5>
                    <ul class="list-group">
                        @foreach (var product in Model.Products)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @product.Name
                                <span class="badge bg-primary rounded-pill">$ @product.Price</span>
                            </li>
                        }
                    </ul>
        
                    <h5 class="mt-4">Total Price:</h5>
                    <p class="h4">$@Model.TotalPrice</p>
                </div>
            </div>
        </div>
    </div>
</div>

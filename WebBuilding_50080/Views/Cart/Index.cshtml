@model WebBuilding_50080.Models.CartViewModel

<h2>Your Cart</h2>

@if (Model.Products.Any())
{
    <ul>
        @foreach (var product in Model.Products)
        {
            <li>
                Product: @product.Name - Price: $@product.Price
                <button onclick="window.location.href='@Url.Action("Remove", "Cart", new { productName = @product.Name })'">Remove</button>
            </li>
        }
    </ul>

    <p>Total Price: $@Model.TotalPrice</p>

    <form method="post" action="@Url.Action("PlaceOrder", "Cart")">
        <button type="submit" class="btn btn-primary">Place Order</button>
    </form>
}
else
{
    <p>Your cart is empty.</p>
}

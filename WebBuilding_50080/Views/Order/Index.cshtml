@model IEnumerable<Orders>
@{
    ViewData["Title"] = "Order Page";

}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Incoming Orders</title>
   <style>
       .hidden-row {
           display: none;
       }
       </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Incoming Orders</h1>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Order ID</th>
                    <th>Customer Name</th>
                    <th>Product</th>
                    <th>Total Price</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>

               @foreach (var order in Model) {
                        
                            // Define selected attributes based on the order status

                            <tr id="row-@order.orderID">
                                <td>@order.orderID</td>
                                <td>@order.firstName</td>
                                <td>@order.items</td>
                                <td>$@order.totalPrice</td>
                                <td>
                                    <button type="button" class="btn btn-info btn-sm" onclick="hideRow('@order.orderID')">Complete</button>
                                </td>
                            </tr>
                        
                    }
                   
            </tbody>
        </table>
        <script>
            function hideRow(orderID) {

                var row = document.getElementById('row-' + orderID);
                if (row) {
                    row.classList.add('hidden-row');
                }
            }
        </script>
    </div>



</body>

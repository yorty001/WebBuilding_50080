@model IEnumerable<Orders>
@{
    ViewData["Title"] = "Order Page";

}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Incoming Orders</title>
   
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Incoming Orders</h1>
        <form method="post" asp-action="SubmitOrders">

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Order ID</th>
                    <th>Customer Name</th>
                    <th>Product</th>
                    <th>Total Price</th>
                    <th>Order Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model) {
                        <tr>
                            <td>@order.orderID</td>
                            <td>@order.firstName</td>
                            <td>@order.items</td>
                            <td>$@order.totalPrice</td>
                            <td>2024-09-13</td>

                            <td>
                                <select class="form-select" data-order-id="1001">
                                    <option value="Completed"selected>Completed</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Cancelled">Cancelled</option>
                                </select>
                            </td>
                        </tr>
                    }
                   
            </tbody>
        </table>
            <button type="submit" class="btn btn-primary">Submit Orders</button>

        </form>
    </div>


</body>

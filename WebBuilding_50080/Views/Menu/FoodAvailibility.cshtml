@model WebBuilding_50080.Models.ProductsViewModel

<table class="table table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Availability</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td><img src="@product.Image" alt="@product.Name" width="100" height="100" /></td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("C")</td>
                <td>@(product.IsAvailable ? "Available" : "Not Available")</td>
                <td>
                    <form method="post" asp-action="ChangeAvailability" asp-controller="Menu">
                        <input type="hidden" name="ProductId" value="@product.Id" />

                        @if (product.IsAvailable)
                        {
                            <button type="submit" class="btn btn-danger">Make Unavailable</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-success">Make Available</button>
                        }
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@model List<WebBuilding_50080.Controllers.FuelPriceModel>

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewpoint" content="width-device-width, initial-scale=1.0" />
        <title>Update Fuel Prices</title>
        <style>
            body{
                font-family: 'Times New Roman', Times, serif;
                background-color:white;
                margin: 0;
                padding: 20px;
            }
            .container {
                max-width: 500px;
                margin: 0 auto;
                padding: 20px;
                background-color:ghostwhite;
                border-radius: 8px;
                box-shadow: 0 0 10px rgba(0,0,0,0.1);
            }
        </style>
    </head>
    <body>
        <div class="container">
            <h1>Update Fuel Prices</h1>
            <form asp-action="UpdateFuelPrice" method="post">
                <table>
                    <thead>
                        <tr>
                            <th>Fuel Type</th>
                            <th>Current Price (AUD per litre)</th>
                            <th>Updated Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var fuel in Model)
                        {
                            <tr>
                                <td>@fuel.FuelType</td>
                                <td>@fuel.CurrentPrice</td>
                                <td>
                                    <input type="number" name="UpdatedPrice" min="0" step="0.01" placeholder="Enter New Price" />
                                </td>
                            </tr>
                    
                        }
                    </tbody>
                </table>
                <input type="submit" value="Update Prices" />
            </form>
        </div>
        
    </body>
</html>
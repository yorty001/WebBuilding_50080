@model WebBuilding_50080.Models.CartViewModel
@{
    ViewData["Title"] = "Order Summary";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Summary</title>
    <style>
        /* Styling similar to your existing one */
        * {
            margin: 0;
            padding: 0;
            font-family: "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif;
            box-sizing: border-box;
            font-size: 14px;
        }

        body {
            -webkit-font-smoothing: antialiased;
            -webkit-text-size-adjust: none;
            width: 100% !important;
            height: 100%;
            line-height: 1.6;
            background-color: #f6f6f6;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background: #fff;
            border: 1px solid #e9e9e9;
            border-radius: 3px;
        }

        .invoice {
            margin: 40px auto;
            text-align: left;
            width: 80%;
        }

        .invoice-items td {
            border-top: #eee 1px solid;
            padding: 5px 0;
        }

        .invoice-items .total td {
            border-top: 2px solid #333;
            border-bottom: 2px solid #333;
            font-weight: 700;
        }

        .alignright {
            text-align: right;
        }

        .content-block {
            padding: 20px 0;
        }

        h2 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        h4 {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="content-block">
            <h2>Thanks for ordering with UTR</h2>
        </div>

        <div class="content-block">
            <table class="invoice" cellpadding="0" cellspacing="0">
                <tr>
                    <td>
                        <strong>@Model.FullName</strong><br>
                        Invoice Number: <strong>@(new Random().Next(100000, 999999))</strong><br>
                        Date: <strong>@DateTime.Now.ToString("MM/dd/yyyy hh:mm tt")</strong><br>
                    </td>
                </tr>
                <tr>
                    <td>
                        <table class="invoice-items" cellpadding="0" cellspacing="0">
                            @foreach (var product in Model.Products)
                            {
                                <tr>
                                    <td>@product.Name</td>
                                    <td class="alignright">$@product.Price</td>
                                </tr>
                            }
                            <tr class="total">
                                <td>Total</td>
                                <td class="alignright">$@Model.TotalPrice</td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </div>

        <div class="content-block">
            <h4>Billing Information</h4>
            <p>@Model.Address, @Model.City, @Model.State, @Model.Zip</p>
        </div>

        <div class="content-block">
            Adelaide, SA 5000.
        </div>
    </div>

    <div class="footer">
        <p class="aligncenter">Questions? Email <a href="mailto:support@company.inc">support@company.inc</a></p>
    </div>
</body>
</html>

@model WebBuilding_50080.Models.User

    
@{
    ViewData["Title"] = "Edit Page";
    var user = Model;
}

<div class="text-center">
    <h1 class="display-4">Edit Account</h1>
    
    <p><a href="@Url.Action("Index", "Menu")">Menu</a></p>
    <p><a href="@Url.Action("Index", "PetrolStations")">Petrol Stations</a></p>
</div>
    <div class="container">
        <form method="post" asp-action="Edit" asp-controller="Account">
            <div class="row">
                <p>Your Current Details:</p>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-control">
                        <label for="firstName">First Name</label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                    <input type="text" name="firstName" class="form-controll" id="firstName" value="@user.firstName">
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                    <input type="text" name="lastName" class="form-controll" id="lastName" value="@user.lastName">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label for="email">Email</label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label for="pass">Password</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                    <input type="email" name="email" class="form-controll" id="email" value="@user.email">
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <input type="password" name="pass" class="form-controll" id="pass" value="@user.pass">
                    </div>
                </div>
            </div>


            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
